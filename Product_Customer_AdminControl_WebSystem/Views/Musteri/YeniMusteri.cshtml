@model _50DERSTEMVC.Models.Entity.TBL_MUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>YeniMusteri</h2>

<form class="form-group" method="post" >
    <div>
        <label>MÜŞTERİ ADI:</label>
        @Html.TextBoxFor(x => x.MUSTERIAD, new { @class="form-control"})
        @Html.ValidationMessageFor(x => x.MUSTERIAD,"", new { @style="color:blue"})
   </div>
    <div style="margin-top:10px">
        <label>MÜŞTERİ SOYADI:</label>
        @Html.TextBoxFor(x => x.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MUSTERISOYAD,"",new { @style="color:blue"})
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1" >MÜŞTERİ EKLE</button>
    </div>
    <script>
        $('#btn1').click(function () { alert('Müşteri Ekleme İşlemi Yapıldı...'); });  
    </script>
</form>